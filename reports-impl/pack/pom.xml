<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>reports-base</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <name>Reports Components</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-reports-components</artifactId>
  <organization>
    <name>sakai</name>
    <url>http://sakaiproject.org/</url>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <packaging>sakai-component</packaging>
  <properties>
    <deploy.target>components</deploy.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-reports-api</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-reports-component-shared</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-metaobj-tool-lib</artifactId>
      <version>${sakai.version}</version>
      <exclusions>
        <exclusion>
                <groupId>aopalliance</groupId>
                <artifactId>aopalliance</artifactId>
        </exclusion>
        <exclusion>
                <groupId>cglib</groupId>
                <artifactId>cglib-full</artifactId>
        </exclusion>
        <exclusion>
                <groupId>javax.transaction</groupId>
                <artifactId>jta</artifactId>
        </exclusion>
        <exclusion>
                <groupId>portlet-api</groupId>
                <artifactId>portlet-api</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-util</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-util</artifactId>
      <version>${sakai.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-metaobj-impl</artifactId>
      <version>${sakai.version}</version>
     <exclusions>
        <exclusion>
                <groupId>aopalliance</groupId>
                <artifactId>aopalliance</artifactId>
        </exclusion>
        <exclusion>
                <groupId>cglib</groupId>
                <artifactId>cglib-full</artifactId>
        </exclusion>
        <exclusion>
                <groupId>javax.transaction</groupId>
                <artifactId>jta</artifactId>
        </exclusion>
        <exclusion>
                <groupId>portlet-api</groupId>
                <artifactId>portlet-api</artifactId>
        </exclusion>
      </exclusions>

    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-util</artifactId>
      <version>${sakai.version}</version>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/bundle</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
        <excludes>
          <exclude>**/web.xml</exclude>
        </excludes>
      </resource>
    </resources>
  </build>
</project>
